# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# ElevenLabs API Configuration
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# JWT Secret - Generate a secure random string (at least 32 characters)
# You can generate one with: openssl rand -base64 32
JWT_SECRET=your_super_secure_jwt_secret_key_here_minimum_32_chars

# Environment
NODE_ENV=development

# Security Configuration
REQUIRE_AUTH=false  # Set to true to require authentication for API access

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
DATABASE_URL=postgresql://username:password@host:port/database

# Remote Logging (Optional)
REMOTE_LOGGING_ENDPOINT=
REMOTE_LOGGING_TOKEN=

# Android Build Configuration (Optional - only needed for APK builds)
ANDROID_KEY_ALIAS=android
ANDROID_KEYSTORE_PATH=./android.keystore
ANDROID_KEYSTORE_PASSWORD=your_secure_keystore_password_here
ANDROID_KEY_PASSWORD=your_secure_key_password_here