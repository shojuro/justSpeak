# Production Environment Variables
# Copy this to .env.production and fill in your production values

# OpenAI API Configuration
OPENAI_API_KEY=your_production_openai_api_key

# ElevenLabs API Configuration
ELEVENLABS_API_KEY=your_production_elevenlabs_api_key

# JWT Secret - Generate a secure one with: openssl rand -base64 32
JWT_SECRET=your_production_jwt_secret_minimum_32_chars

# Environment
NODE_ENV=production

# Security Configuration
REQUIRE_AUTH=false  # Set to true to require authentication

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_production_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_production_supabase_anon_key
DATABASE_URL=your_production_database_url

# Remote Logging (Optional but recommended for production)
REMOTE_LOGGING_ENDPOINT=your_logging_service_endpoint
REMOTE_LOGGING_TOKEN=your_logging_service_token

# Redis Configuration (Optional - for production rate limiting)
REDIS_ENABLED=false
REDIS_HOST=your_redis_host
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password